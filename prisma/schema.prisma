// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categorias {
  id_categoria Int         @id @default(autoincrement())
  code         String      @unique @db.VarChar(100)
  name         String      @db.VarChar(255)
  Conceptos    Conceptos[]
}

model Conceptos {
  id_concepto    Int              @id @default(autoincrement())
  code           String           @db.VarChar(100)
  name           String           @db.VarChar(255)
  categoria      Categorias       @relation(fields: [code_categoria], references: [code])
  code_categoria String
  DetalleAsiento DetalleAsiento[]
}

model Asientos {
  id_asiento     Int              @id @default(autoincrement())
  name           String           @db.VarChar(100)
  date           DateTime         @db.Date
  comment        String
  DetalleAsiento DetalleAsiento[]
}

model DetalleAsiento {
  id_detalle_asiento Int       @id @default(autoincrement())
  debe               Decimal?  @default(0) @db.Decimal(10, 2)
  haber              Decimal?  @default(0) @db.Decimal(10, 2)
  asiento            Asientos  @relation(fields: [id_asiento], references: [id_asiento])
  id_asiento         Int
  concepto           Conceptos @relation(fields: [id_concepto], references: [id_concepto])
  id_concepto        Int
}
